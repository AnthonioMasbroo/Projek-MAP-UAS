<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- EditText for adding a new note -->
    <EditText
        android:id="@+id/etNoteContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type your note here"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icToDoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_checklist_24"
        app:layout_constraintTop_toBottomOf="@id/etNoteContent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/icAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_image_24"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etNoteContent"
        app:layout_constraintStart_toEndOf="@id/icToDoList" />

    <ImageView
        android:id="@+id/icAddVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_videocam_24"
        app:layout_constraintTop_toBottomOf="@id/etNoteContent"
        app:layout_constraintStart_toEndOf="@id/icAddImage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/icAddAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_mic_24"
        app:layout_constraintTop_toBottomOf="@id/etNoteContent"
        app:layout_constraintStart_toEndOf="@id/icAddVideo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/icAddFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_attach_file_24"
        app:layout_constraintTop_toBottomOf="@id/etNoteContent"
        app:layout_constraintStart_toEndOf="@id/icAddAudio"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
