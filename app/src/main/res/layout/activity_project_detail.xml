<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".ProjectDetailActivity">

    <!-- Project Title -->
    <TextView
        android:id="@+id/tvProjectTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Project Title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Team Members -->
    <TextView
        android:id="@+id/tvTeamMemberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team Members"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/tvProjectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTeamMember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team member list goes here..."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsregular"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeamMemberLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time & Date -->
    <TextView
        android:id="@+id/tvTimeDateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time &amp; Date (Due Date)"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/tvTeamMember"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTimeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date and time goes here..."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsregular"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimeDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvProjectDetailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Project Detail"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/tvTimeDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvProjectDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detail of the project goes here..."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsregular"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvProjectDetailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tasks -->
    <TextView
        android:id="@+id/tvTaskLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task List"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/tvProjectDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutTasks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTaskLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
